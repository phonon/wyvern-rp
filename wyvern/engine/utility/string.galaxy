// libwyv_string_trim
// ====================
// Removes front tail and end tail white space from a string
string libwyv_string_trim(string s) {
	int front = 1;
	int end = StringLength(s);
	
	// trim front
	while( StringSub(s, front, front) == " " ) {
		front = front + 1;
	}

	// trim back
	while( StringSub(s, end, end) == " " ) {
		end = end - 1;
	}

	return StringSub(s, front, end);
}